{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["website/**/*"],
  "exclude": ["node_modules"]
}